@model IEnumerable<Al_Gotur2.Models.Urun>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ürün Listesi</h1>
        <a asp-action="ExcelIndir" class="btn btn-success me-2">
            <i class="fas fa-file-excel"></i> Excel'e Aktar
        </a>
        <a asp-action="UrunEkle" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Ürün Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Ürün Adı</th>
                    <th>Kategori</th>
                    <th>Fiyat</th>
                    <th>Stok</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="/products/@item.ResimUrl" style="height:50px;" alt="@item.UrunAdi" />
                        </td>
                        <td>@item.UrunAdi</td>
                        <td>@item.Kategori?.KategoriAdi</td>
                        <td>@item.Fiyat.ToString("C2")</td>
                        <td>@item.StokMiktari</td>
                        <td>
                            <a asp-action="UrunDuzenle" asp-route-id="@item.UrunID" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="UrunSil" asp-route-id="@item.UrunID" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>