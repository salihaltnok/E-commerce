@model Al_Gotur2.Models.AnaSayfaViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .hero-section {
        padding: 4rem 0;
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        border-radius: 1rem;
        margin-bottom: 3rem;
    }

    .hero-image-container img {
        max-width: 100%;
        height: auto;
        transition: transform 0.3s ease;
    }

    .hero-image-container:hover img {
        transform: scale(1.05);
    }

    .product-card {
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
        }

    .product-image-container {
        padding: 1rem;
        background: #f8f9fa;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-image-container img {
            max-height: 100%;
            width: auto;
            object-fit: contain;
        }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        height: 2.4rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .price {
        font-size: 1.25rem;
        font-weight: bold;
        color: #0d6efd;
    }

    .featured-products, .best-sellers {
        padding: 4rem 0;
    }

    .best-sellers {
        background-color: #f8f9fa;
    }

    .section-title {
        position: relative;
        text-align: center;
        margin-bottom: 3rem;
    }

        .section-title:after {
            content: '';
            display: block;
            width: 50px;
            height: 3px;
            background: #0d6efd;
            margin: 1rem auto;
        }

    .sale-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: #dc3545;
        color: white;
        padding: 0.5rem;
        border-radius: 0.5rem;
        font-size: 0.8rem;
    }
</style>

<div class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="/images/algotur-logo.png" alt="Algötür" class="mb-4" style="max-width: 500px;">
                <h1 class="display-4">Teknoloji Evinizde</h1>
                <p class="lead">En son teknoloji ürünleri uygun fiyatlarla sizlerle!</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Urun" asp-action="Index" class="btn btn-primary btn-lg">
                        Tüm Ürünler
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="hero-image-container">
                    <img src="/images/hero.png" alt="Teknoloji" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </div>
</div>

<section class="featured-products">
    <div class="container">
        <h2 class="section-title">Öne Çıkan Ürünler</h2>
        <div class="row">
            @foreach (var urun in Model.OneCikanUrunler)
            {
                <div class="col-md-3 mb-4">
                    <div class="card product-card">
                        <div class="product-image-container">
                            @if (!string.IsNullOrEmpty(urun.ResimUrl))
                            {
                                <img src="/products/@urun.ResimUrl"
                                     class="card-img-top"
                                     alt="@urun.UrunAdi"
                                     onerror="this.src='/images/no-image.png'">
                            }
                            else
                            {
                                <img src="/images/no-image.png"
                                     class="card-img-top"
                                     alt="Ürün resmi bulunamadı">
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@urun.UrunAdi</h5>
                            <p class="card-text text-truncate">@urun.Aciklama</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">@urun.Fiyat.ToString("C2")</span>
                                <a href="@Url.Action("Detay", "Urun", new { id = urun.UrunID })"
                                   class="btn btn-primary">İncele</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="best-sellers">
    <div class="container">
        <h2 class="section-title">En Çok Satan Ürünler</h2>
        <div class="row">
            @foreach (var urun in Model.EnCokSatanUrunler)
            {
                <div class="col-md-3 mb-4">
                    <div class="card product-card">
                        <div class="product-image-container">
                            @if (!string.IsNullOrEmpty(urun.ResimUrl))
                            {
                                <img src="/products/@urun.ResimUrl"
                                     class="card-img-top"
                                     alt="@urun.UrunAdi"
                                     onerror="this.src='/images/no-image.png'">
                            }
                            else
                            {
                                <img src="/images/no-image.png"
                                     class="card-img-top"
                                     alt="Ürün resmi bulunamadı">
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@urun.UrunAdi</h5>
                            <p class="card-text text-truncate">@urun.Aciklama</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">@urun.Fiyat.ToString("C2")</span>
                                <a href="@Url.Action("Detay", "Urun", new { id = urun.UrunID })"
                                   class="btn btn-primary">İncele</a>
                            </div>
                            @if (urun.ToplamSatisMiktari > 0)
                            {
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="fas fa-fire text-danger"></i> @urun.ToplamSatisMiktari adet satıldı
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>